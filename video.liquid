{% assign isimage = isimage | default: false %}

{% if videodata != blank %}

    {% if videodata contains 'youtube.com' %}
        
        {% assign videoid = videodata | split: '/' | last %}

        {% assign videoid = videoid | split: '?v=' | last %}

        {% assign videoid = videoid | split: '#' | first %}

        {% assign videoid = videoid | split: '&' | first %}

        {% assign ytthumbnail = 'http://img.youtube.com/vi/' | append: videoid | append: '/maxresdefault.jpg' %}


        {% if isimage %}

        	<div class="video-snippet-image-wrapper">
                <svg height="50" version="1.1" viewBox="0 0 68 48" width="50"><path class="ytp-large-play-button-bg" d="M66.52,7.74c-0.78-2.93-2.49-5.41-5.42-6.19C55.79,.13,34,0,34,0S12.21,.13,6.9,1.55 C3.97,2.33,2.27,4.81,1.48,7.74C0.06,13.05,0,24,0,24s0.06,10.95,1.48,16.26c0.78,2.93,2.49,5.41,5.42,6.19 C12.21,47.87,34,48,34,48s21.79-0.13,27.1-1.55c2.93-0.78,4.64-3.26,5.42-6.19C67.94,34.95,68,24,68,24S67.94,13.05,66.52,7.74z" fill="#f00"></path><path d="M 45,24 27,14 27,34" fill="#fff"></path></svg>
                <img src="{{ ytthumbnail }}" {{ imgattrs }} />
            </div>

        {% else %}

        	<iframe 
	        height="315" 
	        src="https://www.youtube.com/embed/{{videoid}}" 
	        frameborder="0" 
	        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
	        style="width: 100%;"
	        allowfullscreen></iframe>

        {% endif %}
        

    {% endif %}

    {% if videodata contains '.mp4' %}

        {% if isimage %}

            <div class="video-snippet-image-wrapper">

                <video height="315" style="width:100%;height:100%;pointer-events:none;" playsinline preload="metadata">
                    <source src="{{ videodata }}#t=0.5" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>

        {% else %}

            <video height="315" style="width:100%;" controls>
                <source src="{{ videodata }}" type="video/mp4">
                Your browser does not support the video tag.
            </video>

        {% endif %}

    {% endif %}

{% endif %}